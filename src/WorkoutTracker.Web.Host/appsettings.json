{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ConnectionStrings": {
    "Database": "Server=localhost,MSSQL_PORT;Database=MSSQL_DB;User Id=MSSQL_USER;Password=MSSQL_PASSWORD;Encrypt=False;TrustServerCertificate=True;"
  },

  "Jwt": {
    "Issuer": "WorkoutTracker.AuthService",
    "Audience": "WorkoutTracker.Clients",
    "SecretKey": "JWT_SECRET_KEY",
    "ExpirationMinutes": 60
  },

  "Smtp": {
    "Username": "SMTP_USERNAME",
    "Password": "SMTP_PASSWORD",
    "Host": "smtp.gmail.com",
    "Port": 587,
    "EnableSsl": true
  }
}
